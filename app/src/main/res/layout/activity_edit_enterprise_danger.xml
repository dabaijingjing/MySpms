<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_enterprise_danger"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepage_bg"
    tools:context="com.example.lzc.myspms.activitys.queryactivitys.enterpriseinfoactivitys.EditEnterpriseDangerActivity">
    <include layout="@layout/header"
        android:id="@+id/activity_edit_enterprise_danger_header"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/check_project_all_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/fragment_homepage_text_title_style"
            android:background="@mipmap/title"
            android:layout_gravity="center_horizontal"
            android:text="风险管控" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <com.example.lzc.myspms.custom.AutoFitTextView
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="风险点位类型"
                android:textSize="14sp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <com.example.lzc.myspms.custom.ClearEditText
                android:id="@+id/activity_edit_enterprise_danger_et_fxdw"
                style="@style/add_enterprise_edittext_style"
                android:hint="点击选择"
                android:textColorHint="@color/hint_yellow"
                android:layout_weight="3" />
            <com.example.lzc.myspms.custom.AutoFitTextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="名称"
                android:textSize="14sp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <com.example.lzc.myspms.custom.ClearEditText
                android:id="@+id/activity_edit_enterprise_danger_et_mc"
                style="@style/add_enterprise_edittext_style"
                android:hint="请输入名称"
                android:textColorHint="@color/hint_yellow"
                android:layout_weight="3" />
            <com.example.lzc.myspms.custom.AutoFitTextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="使用部门"
                android:textSize="14sp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <com.example.lzc.myspms.custom.ClearEditText
                android:id="@+id/activity_edit_enterprise_danger_et_sybm"
                style="@style/add_enterprise_edittext_style"
                android:hint="请输入部门"
                android:textColorHint="@color/hint_yellow"
                android:layout_weight="3" />

            <com.example.lzc.myspms.custom.AutoFitTextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="编码"
                android:textSize="14sp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <com.example.lzc.myspms.custom.ClearEditText
                android:id="@+id/activity_edit_enterprise_danger_et_bm"
                style="@style/add_enterprise_edittext_style"
                android:hint="请输入编码"
                android:textColorHint="@color/hint_yellow"
                android:layout_marginRight="10dp"
                android:layout_weight="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <Button
                android:id="@+id/activity_edit_enterprise_danger_btn_search"
                android:text="查询"
                android:textColor="@color/homepage_text_press"
                android:background="@mipmap/check_project_btn_border"
                android:layout_marginRight="10dp"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/activity_edit_enterprise_danger_btn_reset"
                android:text="重置"
                android:textColor="@color/homepage_text_press"
                android:background="@mipmap/check_project_btn_border"
                android:layout_marginRight="10dp"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/activity_edit_enterprise_danger_btn_add"
                android:text="添加"
                android:textColor="@color/homepage_text_press"
                android:background="@mipmap/check_project_btn_border"
                android:layout_marginRight="10dp"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/homepage_text_normal"
            android:layout_height="40dp">
            <TextView
                android:text="风险点位类型"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:text="名称"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:text="编码"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:text="操作"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/activity_edit_enterprise_danger_lv"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:divider="@null" />
    </LinearLayout>

</LinearLayout>
