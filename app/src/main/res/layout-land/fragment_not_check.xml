<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_not_check_no_network_connection"
        layout="@layout/no_network_connection"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_not_check_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="155dp"
            android:layout_marginTop="20dp"
            android:background="@color/bg_green"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_not_check_check_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="预定时间"
                android:textColor="@color/backgroundWhite"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundWhite" />

            <TextView
                android:id="@+id/fragment_not_check_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="类型"
                android:textColor="@color/backgroundWhite"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundWhite" />

            <TextView
                android:id="@+id/fragment_not_check_qymc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="企业名称"
                android:textColor="@color/backgroundWhite"
                android:textSize="16sp" />
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/fragment_not_check_pulltorefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="155dp"
            android:layout_weight="12"
            android:background="@drawable/shape_searchview_bg_green"
            android:divider="@color/bg_green"
            android:dividerHeight="1px"
            android:scrollbars="none">

        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </LinearLayout>

</LinearLayout>