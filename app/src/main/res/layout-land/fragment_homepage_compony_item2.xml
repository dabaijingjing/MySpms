<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_homepage_compony_item2_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/fragment_homepage_compony_item2_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="5dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp" />
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/fragment_homepage_compony_item2_location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/location"
            android:padding="5dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />
</LinearLayout>