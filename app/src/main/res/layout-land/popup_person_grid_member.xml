<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <com.example.lzc.myspms.custom.ImageViewPlus
        android:id="@+id/popup_main_personal_img_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@mipmap/popup_preson_grid_img_empty" />

    <TextView
        android:id="@+id/popup_main_personal_tv_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="姓名"
        android:textColor="@color/homepage_text_press"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/popup_main_personal_tv_position"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="职位"
        android:textColor="@color/homepage_text_press"
        android:textSize="12sp" />
</LinearLayout>