<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <include
        android:id="@+id/fragment_month_check_no_network_connection"
        layout="@layout/no_network_connection"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/fragment_month_check_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/fragment_month_check_plv"
            android:layout_width="0dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:divider="@color/transparent"
            android:dividerHeight="2dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>

        <LinearLayout
            android:id="@+id/fragment_month_check_pc_ll"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/fragment_month_check_pc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:id="@+id/fragment_month_check_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>