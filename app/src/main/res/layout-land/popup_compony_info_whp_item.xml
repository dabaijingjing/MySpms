<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/popup_compony_info_whp_item_mc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textColor="@color/homepage_text_press"
            android:textColorHint="@color/transparent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/homepage_text_press" />

        <EditText
            android:id="@+id/popup_compony_info_whp_item_sl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/app_name"
            android:inputType="number|numberDecimal"
            android:textColor="@color/homepage_text_press"
            android:textColorHint="@color/transparent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp" />
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/homepage_text_press" />
        <EditText
            android:id="@+id/popup_compony_info_whp_item_dw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textColor="@color/homepage_text_press"
            android:textColorHint="@color/transparent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp" />
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/homepage_text_press" />
        <ImageView
            android:id="@+id/popup_compony_info_whp_item_operate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/delete" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homepage_text_press" />
</LinearLayout>