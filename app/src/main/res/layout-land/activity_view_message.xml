<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_message"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepage_bg"
    tools:context="com.example.lzc.myspms.activitys.homepageactivitys.menuactivitys.ViewMessageActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/header"
            android:id="@+id/activity_view_message_header"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:text="发件人："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/homepage_text_press"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/activity_view_message_tv_fjr"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/homepage_text_press"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:text="时间："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/homepage_text_press"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/activity_view_message_tv_sj"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/homepage_text_press"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:text="收件人："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/homepage_text_press"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/activity_view_message_tv_sjr"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/homepage_text_press"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:text="标题："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/homepage_text_press"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/activity_view_message_tv_bt"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/homepage_text_press"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:text="主题："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/homepage_text_press"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/activity_view_message_tv_zt"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/homepage_text_press"
                android:layout_height="match_parent" />
        </LinearLayout>
        <com.example.lzc.myspms.custom.MyListView
            android:id="@+id/activity_view_message_lv"
            android:background="@mipmap/check_project_all_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_height="wrap_content">
        </com.example.lzc.myspms.custom.MyListView>
        <Button
            android:id="@+id/activity_view_message_btn_Reply"
            android:layout_gravity="center"
            android:background="@mipmap/check_project_btn_border"
            android:text="回复邮件"
            android:layout_marginTop="10dp"
            android:textColor="@color/homepage_text_press"
            android:layout_width="120dp"
            android:layout_height="40dp" />
    </LinearLayout>

</ScrollView>
