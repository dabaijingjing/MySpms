<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <com.example.lzc.myspms.custom.AutoFitTextView
            android:id="@+id/fragment_community_check_record_item_tv_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <com.example.lzc.myspms.custom.AutoFitTextView
            android:id="@+id/fragment_community_check_record_item_tv_task"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <com.example.lzc.myspms.custom.AutoFitTextView
            android:id="@+id/fragment_community_check_record_item_tv_check"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <com.example.lzc.myspms.custom.AutoFitTextView
            android:id="@+id/fragment_community_check_record_item_tv_number"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/fragment_community_check_record_item_ll"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/fragment_community_check_record_item_img_edit"
                android:src="@mipmap/enterprise_info_query_item_img_edit"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>