<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/popup_videocall_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_range_tv_title_fzsqs"
        style="@style/fragment_homepage_text_title_style"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/title"
        android:text="选择视频通话对象" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--<Spinner-->
        <!--android:id="@+id/popup_videocall_sp"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@drawable/new_check_pull_bg"-->
        <!--android:spinnerMode="dialog" />-->
        <GridView
            android:id="@+id/popup_videocall_gv"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:gravity="center"
            android:numColumns="2"
            android:visibility="visible">

        </GridView>

        <Button
            android:id="@+id/popup_videocall_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/new_check_btn_bg"
            android:gravity="center"
            android:text="通话"
            android:textColor="@color/homepage_text_press" />
    </LinearLayout>

</LinearLayout>