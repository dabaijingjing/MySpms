<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_check_items_item_xmmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/app_name"
        android:textColor="@color/bg_green"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/activity_check_items_item_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_check_items_item_xmmc"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_check_items_item_rb_qualified"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/checkbox_qualified_style"
            android:background="@color/zxing_transparent"
            android:textColor="@color/bg_green"
            android:text="合格" />

        <RadioButton
            android:id="@+id/activity_check_items_item_rb_unqualified"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:drawableTop="@drawable/checkbox_unqualified_style"
            android:gravity="center_horizontal"
            android:textColor="@color/bg_green"
            android:background="@color/zxing_transparent"
            android:text="不合格" />
    </RadioGroup>

    <ImageView
        android:id="@+id/activity_check_items_item_iv_pic"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>