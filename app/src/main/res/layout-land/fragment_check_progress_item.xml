<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <TextView
            android:id="@+id/fragment_check_progress_item_tv_type"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/homepage_text_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_check_progress_item_tv_unqualified_number"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/homepage_text_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_check_progress_item_tv_compony"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/homepage_text_press"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_check_progress_item_tv_supervision"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/homepage_text_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_check_progress_item_tv_date"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/homepage_text_press"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>