<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lzc.myspms.activitys.homepageactivitys.menuactivitys.GroupActivity">
    <include android:id="@+id/activity_group_header"
        layout="@layout/header"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="小组名称:"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/activity_group_tv_name"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textColor="@color/bg_green"
            android:layout_height="match_parent" />
        <View
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="隶属单位:"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/activity_group_tv_lsdw"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textColor="@color/bg_green"
            android:layout_height="match_parent" />
        <View
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="小组成员:"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_height="match_parent" />
        <View
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_green"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/backgroundWhite"

            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/backgroundWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/backgroundWhite"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/backgroundWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="职位"
            android:textColor="@color/backgroundWhite"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/backgroundWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/backgroundWhite"
            android:textSize="16sp" />

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/activity_group_pulltorefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_searchview_bg_green"
        android:divider="@null"
        android:scrollbars="none" />
</LinearLayout>
